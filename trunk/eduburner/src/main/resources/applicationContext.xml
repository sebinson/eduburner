<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config/>
	 
	<context:component-scan base-package="eduburner">
    	<context:include-filter type="regex" expression="eduburner\.user\.service\..*"/>
    	<context:include-filter type="regex" expression="eduburner\.course\.service\..*"/>
    	<!--  
        <context:exclude-filter type="aspectj" expression="eduburner.feed.fetcher..*"/>
        -->
    </context:component-scan>

	<!-- AnnotationBeanConfigurerAspect -->
	<context:spring-configured/>
	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation">
			<value>classpath:ehcache.xml</value>
		</property>
	</bean>

	<bean id="cache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager" />
		</property>
		<property name="cacheName">
			<value>eduburner.cache</value>
		</property>
	</bean>
	
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="jdbcUrl"
			value="jdbc:mysql://localhost/eduburner?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;characterEncoding=utf-8" />
		<property name="properties">
			<props>
				<prop key="c3p0.acquire_increment">5</prop>
				<prop key="c3p0.idle_test_period">100</prop>
				<prop key="c3p0.max_size">100</prop>
				<prop key="c3p0.max_statements">0</prop>
				<prop key="c3p0.min_size">10</prop>
				<prop key="c3p0.testConnectionOnCheckout">true</prop>
				<prop key="user">root</prop>
				<prop key="password">rootpass</prop>
			</props>
		</property>
	</bean>
	
	<bean id="fetcherProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="location" value="classpath:fetcher.properties"/>
	</bean>
	
	<bean id="passwordEncoder" class="org.springframework.security.providers.encoding.ShaPasswordEncoder"/>
	
	<bean id="abdera" class="org.apache.abdera.Abdera" />
	
	<import resource="classpath:applicationContext-hibernate.xml" />
	<import resource="classpath:applicationContext-security.xml" />
</beans>